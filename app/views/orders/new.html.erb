<h1>Checkout</h1>
<%= @order.order_items.size %>
<%= simple_form_for @order do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :country %>
  <%= f.input :address_1, label: "Address" %>
  <%= f.input :address_2, label: "UNIT/APT" %>
  <%= f.input :city %>
  <%= f.input :postal_code %>
  <%= f.button :submit, "Submit order" %>
<% end %>
